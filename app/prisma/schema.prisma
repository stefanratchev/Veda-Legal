// Veda Legal Timesheet Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - linked to Microsoft 365 SSO
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          UserRole  @default(EMPLOYEE)
  status        UserStatus @default(PENDING)
  lastLogin     DateTime?

  // Relations
  timeEntries   TimeEntry[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

// Client model
model Client {
  id            String        @id @default(cuid())
  name          String
  timesheetCode String        @unique    // Code shown in employee timesheets
  invoicedName  String?                  // Name on outgoing invoices
  invoiceAttn   String?                  // Contact person for invoices
  email         String?
  hourlyRate    Decimal?      @db.Decimal(10, 2)  // Rate in EUR
  phone         String?
  address       String?
  practiceArea  PracticeArea?
  status        ClientStatus  @default(ACTIVE)
  notes         String?

  // Relations
  timeEntries   TimeEntry[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("clients")
}

enum ClientStatus {
  ACTIVE
  INACTIVE
}

enum TopicStatus {
  ACTIVE
  INACTIVE
}

model Topic {
  id           String      @id @default(cuid())
  name         String
  code         String      @unique
  displayOrder Int         @default(0)
  status       TopicStatus @default(ACTIVE)

  timeEntries  TimeEntry[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("topics")
}

enum PracticeArea {
  CORPORATE
  FAMILY_LAW
  IP_PATENT
  REAL_ESTATE
  LITIGATION
  EMPLOYMENT
  TAX
  IMMIGRATION
  CRIMINAL
  OTHER
}

// TimeEntry model - the core timesheet entries
model TimeEntry {
  id            String    @id @default(cuid())
  date          DateTime  @db.Date
  hours         Decimal   @db.Decimal(4, 2)
  description   String

  // Relations
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  topicId       String?
  topic         Topic?    @relation(fields: [topicId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([clientId])
  @@index([topicId])
  @@index([date])
  @@map("time_entries")
}
