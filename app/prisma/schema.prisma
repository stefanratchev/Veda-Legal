// Veda Legal Timesheet Database Schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

// User model - linked to Microsoft 365 SSO
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          UserRole  @default(EMPLOYEE)
  status        UserStatus @default(PENDING)
  lastLogin     DateTime?

  // Relations
  timeEntries   TimeEntry[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

// Client model
model Client {
  id            String        @id @default(cuid())
  name          String
  timesheetCode String        @unique    // Code shown in employee timesheets
  invoicedName  String?                  // Name on outgoing invoices
  invoiceAttn   String?                  // Contact person for invoices
  email         String?
  hourlyRate    Decimal?      @db.Decimal(10, 2)  // Rate in EUR
  phone         String?
  address       String?
  practiceArea  PracticeArea?
  status        ClientStatus  @default(ACTIVE)
  notes         String?

  // Relations
  timeEntries   TimeEntry[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("clients")
}

enum ClientStatus {
  ACTIVE
  INACTIVE
}

enum TopicStatus {
  ACTIVE
  INACTIVE
}

enum SubtopicStatus {
  ACTIVE
  INACTIVE
}

model Topic {
  id           String      @id @default(cuid())
  name         String
  displayOrder Int         @default(0)
  status       TopicStatus @default(ACTIVE)

  subtopics    Subtopic[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("topics")
}

model Subtopic {
  id           String         @id @default(cuid())
  topicId      String
  topic        Topic          @relation(fields: [topicId], references: [id])
  name         String
  isPrefix     Boolean        @default(false)
  displayOrder Int            @default(0)
  status       SubtopicStatus @default(ACTIVE)

  timeEntries  TimeEntry[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([topicId])
  @@map("subtopics")
}

enum PracticeArea {
  CORPORATE
  FAMILY_LAW
  IP_PATENT
  REAL_ESTATE
  LITIGATION
  EMPLOYMENT
  TAX
  IMMIGRATION
  CRIMINAL
  OTHER
}

// TimeEntry model - the core timesheet entries
model TimeEntry {
  id            String    @id @default(cuid())
  date          DateTime  @db.Date
  hours         Decimal   @db.Decimal(4, 2)
  description   String

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId      String
  client        Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  // New: Subtopic reference + denormalized names for immutability
  subtopicId    String?
  subtopic      Subtopic? @relation(fields: [subtopicId], references: [id])
  topicName     String    @default("")
  subtopicName  String    @default("")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([clientId])
  @@index([subtopicId])
  @@index([date])
  @@map("time_entries")
}
